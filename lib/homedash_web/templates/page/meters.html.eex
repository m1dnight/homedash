<span id="solar" data-labels='<%= raw(@data.solar |> labels_day()) %>' data-values='<%= raw(@data.solar |> values_recent() )%>'></span>
<span id="gas" data-labels='<%= raw(@data.gas |> labels_day()) %>' data-values='<%= raw(@data.gas |> values_recent() )%>'></span>
<span id="electricity" data-labels='<%= raw(@data.electricity |> labels_day()) %>' data-values='<%= raw(@data.electricity |> values_recent() )%>'></span>



<div class="row">
  <div class="col-lg-12">
    <div class="card card-chart">
      <div class="card-header">
        <h3 class="card-title"><i class="yellow" data-feather="zap"></i>Electricity</h3>
      </div>
      <div class="card-body">
        <div class="chart-area">
          <canvas id="electricityChart"></canvas>
        </div>
        <span class="average-badge badge badge-electricity">Weekly Average: <%=@data.electricity7 |> format_float() %> kWh</span>
        <span class="average-badge badge badge-electricity">Monthly Average: <%=@data.electricity30 |> format_float() %> kWh</span>
        <span class="average-badge badge badge-electricity">Yearly Average: <%=@data.electricity365 |> format_float() %> kWh</span>
      </div>
    </div>
  </div>

  <div class="col-lg-12">
    <div class="card card-chart">
      <div class="card-header">
        <h3 class="card-title"><i class="green" data-feather="sun"></i>Solar</h3>
      </div>
      <div class="card-body">
        <div class="chart-area">
          <canvas id="solarChart"></canvas>
        </div>
        <span class="average-badge badge badge-solar">Weekly Average: <%=@data.solar7 |> format_float() %> kWh</span>
        <span class="average-badge badge badge-solar">Monthly Average: <%=@data.solar30 |> format_float() %> kWh</span>
        <span class="average-badge badge badge-solar">Yearly Average: <%=@data.solar365 |> format_float() %> kWh</span>
      </div>
    </div>
  </div>


  <div class="col-lg-12">
    <div class="card card-chart">
      <div class="card-header">
        <h3 class="card-title"><i class="red" data-feather="thermometer"></i>Gas</h3>
      </div>
      <div class="card-body">
        <div class="chart-area">
          <canvas id="gasChart"></canvas>
        </div>
        <span class="average-badge badge badge-gas">Weekly Average: <%=@data.gas7 |> format_float() %> m<sup>3</sup></span>
        <span class="average-badge badge badge-gas">Monthly Average: <%=@data.gas30 |> format_float() %> m<sup>3</sup></span>
        <span class="average-badge badge badge-gas">Yearly Average: <%=@data.gas365 |> format_float() %> m<sup>3</sup></span>
      </div>
    </div>
  </div>


</div>
